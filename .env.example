# Database (uses DATABASE_URL for all environments)
DATABASE_URL=postgresql://postgres:postgres@localhost/relay_help_development

# Rails
SECRET_KEY_BASE=run_rails_secret_to_generate
RAILS_MASTER_KEY=your_master_key

# App URLs
MARKETING_SITE_URL=https://relayhelp.com
APP_URL=http://localhost:3001

# Discord Bot
DISCORD_BOT_TOKEN=your_bot_token
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_PUBLIC_KEY=your_public_key
DISCORD_BOT_URL=http://localhost:3002
DISCORD_BOT_WEBHOOK_SECRET=generate_a_secret_for_webhook_auth

# OpenRouter (AI)
OPENROUTER_API_KEY=your_api_key

# JWT Authentication
DEVISE_JWT_SECRET_KEY=run_openssl_rand_hex_64_to_generate
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# ====================================================
# NOTE: Redis is NOT required!
# Background jobs use Solid Queue (PostgreSQL-based)
# Real-time uses PostgreSQL LISTEN/NOTIFY + SSE
# ====================================================